@model TariffApp.Models.Client

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Client</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="ClientId" />
            <div class="form-group">
                <label asp-for="CreditScore" class="control-label"></label>
                <input asp-for="CreditScore" class="form-control" />
                <span asp-validation-for="CreditScore" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Segment" class="control-label"></label>
                <select asp-for="Segment" class="form-control" asp-items="ViewBag.SegmentList"></select>
                <span asp-validation-for="Segment" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsRisky" /> @Html.DisplayNameFor(model => model.IsRisky)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
